{% extends 'base_front.html.twig' %}

{% block title %}Gestion utilisateurs{% endblock %}

{% block body %}
<div class="section_tableau">
    <div class="content">
        <h1>Listes des utilisateurs</h1>
        <table>
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Role</th>
                    <th>Modifier</th>
                    <th>Voir les listes de l'utilisateurs</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>
                        <select id="user-role-{{ user.id }}" disabled="true"
                        data-original-role="{% if 'ROLE_ADMIN' in user.roles %}ROLE_ADMIN{% else %}ROLE_USER{% endif %}">
                        <option value="ROLE_USER" {% if 'ROLE_ADMIN' not in user.roles %}selected{% endif %}>User
                        </option>
                        <option value="ROLE_ADMIN" {% if 'ROLE_ADMIN' in user.roles %}selected{% endif %}>Admin</option>
                    </select>
                </td>
                   <td><a href="{{ path('back_app_admin_edit_user', {'id': user.id}) }}" class="edit-user-icon">Modifier</a></td>
                   <td><a href="{{ path('back_app_user_lists', {'id': user.id}) }}" class="edit-user-icon">Voir les listes</a></td> 
                    
                </tr>
                {% endfor %}
                <!-- Ajoutez d'autres lignes pour chaque liste de cadeaux -->
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
